<h1 class="text-center my-4 text-primary fw-light">Materiales Online (Cloudinary)</h1>

<% if @materiales_online.any? %>
  <div class="row justify-content-center">
    <% @materiales_online.each do |material| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= material["public_id"] %></h5>
            <p class="card-text text-muted">Archivo: <%= material["secure_url"].split('/').last %></p>
            <a href="<%= material["secure_url"] %>" target="_blank" class="btn btn-outline-primary btn-sm mb-2">Ver PDF</a>
            <button class="btn btn-success btn-sm" onclick="mostrarFormulario('<%= material["secure_url"] %>', '<%= material["public_id"] %>')">Agregar a Biblioteca</button>
            <div id="form-<%= material["public_id"] %>" class="mt-3 d-none">
              <%= form_with url: libros_path, method: :post, local: true do |f| %>
                <%= f.hidden_field :pdf_url, value: material["secure_url"] %>
                <div class="mb-2">
                  <%= f.label :titulo, class: "form-label" %>
                  <%= f.text_field :titulo, value: material["public_id"], class: "form-control" %>
                </div>
                <div class="mb-2">
                  <%= f.label :autor, class: "form-label" %>
                  <%= f.text_field :autor, class: "form-control" %>
                </div>
                <div class="mb-2">
                  <%= f.label :paginas, class: "form-label" %>
                  <%= f.number_field :paginas, class: "form-control" %>
                </div>
                <div class="mb-2">
                  <%= f.label :estado, class: "form-label" %>
                  <%= f.select :estado, Libro.estados.keys.map { |e| [e.humanize, e] }, {}, class: "form-select" %>
                </div>
                <div class="text-end">
                  <%= f.submit "Agregar", class: "btn btn-primary btn-sm" %>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="ocultarFormulario('<%= material["public_id"] %>')">Cancelar</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted text-center">No hay materiales online pendientes de agregar.</p>
<% end %>

<script>
function mostrarFormulario(url, id) {
  document.getElementById('form-' + id).classList.remove('d-none');
}
function ocultarFormulario(id) {
  document.getElementById('form-' + id).classList.add('d-none');
}
</script>