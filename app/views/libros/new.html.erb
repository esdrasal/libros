<h1 class="mb-4 text-primary text-center fw-light">Agregar Nuevo Libro</h1>

<% if @libro.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @libro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <%= form_with(model: @libro, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :titulo, class: "form-label fw-semibold text-primary" %>
        <%= f.text_field :titulo, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :autor, class: "form-label fw-semibold text-primary" %>
        <%= f.text_field :autor, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :pdf, "Subir PDF", class: "form-label fw-semibold text-primary" %>
        <%= f.file_field :pdf, class: "form-control" %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Agregar Libro", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="mt-3 text-center">
      <%= link_to "Volver a Mis Libros", libros_path, class: "btn btn-outline-primary btn-sm" %>